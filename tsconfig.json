{
   "compilerOptions": {
      "lib": [
         "ES5",
         "ES6",
         "ES7",
         "DOM"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true
   },
   "include": ["src/**/*"]
}